<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.user.driver.shipment_exceuption.ShipmentExecutionFragment">

        <!-- TODO: Update blank fragment layout -->

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayoutShipment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:background="@color/purple_200"
            android:gravity="start"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar">


            <com.google.android.material.tabs.TabLayout
                app:tabTextColor="@color/white"
                android:id="@+id/tabLayoutShipment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabIndicatorColor="@color/yellow"
                app:tabIndicatorHeight="@dimen/three_dp"
                app:tabMode="fixed"/>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:layout_below="@+id/appBarLayoutShipment"
            android:id="@+id/shipmentExecutionViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </androidx.viewpager.widget.ViewPager>
    </RelativeLayout>

</layout>